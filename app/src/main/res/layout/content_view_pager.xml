<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytProductSlider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_pager">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpImageSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingEnd="@dimen/padding_margin_11dp"
            android:paddingStart="@dimen/padding_margin_11dp" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/sliderIndicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_width_50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_margin_10dp"
            android:padding="@dimen/padding_margin_10dp" />
    </RelativeLayout>

</RelativeLayout>
