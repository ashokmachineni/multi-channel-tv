<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_card_view"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    card_view:cardCornerRadius="@dimen/card_album_radius"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/channelLogo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_width_95dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/padding_margin_5dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/channelLogo"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/padding_margin_5dp"
            android:weightSum="1">

            <com.mcc.alltv.view.PhenomenaTextView
                android:id="@+id/channelName"
                android:layout_width="@dimen/height_width_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".80"
                android:paddingLeft="@dimen/padding_margin_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/cardview_title_textsize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="@dimen/height_width_0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/padding_margin_5dp"
                android:layout_weight=".20"
                android:scaleType="fitEnd"
                android:paddingEnd="@dimen/padding_margin_5dp"
                android:paddingRight="@dimen/padding_margin_5dp"
                android:src="@drawable/ic_favorite" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
